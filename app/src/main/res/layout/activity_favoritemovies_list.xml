<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controladores.MoviesListActivity"
        android:background="@color/colorBackGround">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/listMovies"
            android:clickable="true" android:layout_marginTop="56dp" app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/addMovies" android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="55dp" android:layout_marginRight="55dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/listMovies" app:layout_constraintStart_toEndOf="@+id/listMovies"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp"
            android:onClick="goBackMoviesList"/>
    <com.like.LikeButton
            app:icon_type="heart"
            app:icon_size="25dp"
            android:id="@+id/star_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toStartOf="@+id/addMovies"
            android:layout_marginEnd="231dp" android:layout_marginRight="231dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/listMovies" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:onClick="goToFavorites"/>
</android.support.constraint.ConstraintLayout>